@import default
body
	font-size: 100%
input[type='text']
	width:120px
fieldset
	padding: 1px 1px
	display: inline
	border: 1px dashed gray
#container
	min-height: 96%
#searchbar
	margin: 2px 0
	padding: 0 0
	text-align: center
	vertical-align: center
	border-top: 1px solid #bdbdbd
#searchresults
	width: 90%
	text-align: left
	padding: 10px 10px
	margin: auto auto
	font-size: 100%
	text-align: left
.item
	padding: 10px 30px
	margin: 2px
	cursor: pointer
.item:hover
	@extend .plump
	text-shadow: 1px 1px 2px gray
	box-shadow: 2px 2px 2px gray
.postcontent
	margin-top: 5px
	padding: 5px
	border: 1px dashed gray
.postpartial
	display: block
	margin: 5px
	padding: 5px
	width: 60%
	max-width: 80%
	@extend input
.fetched
	box-shadow: inset 0 0 3px gray
	background-color: #ddd
.hidden
	display: none
.busy
	cursor: wait
.prompt
	max-width: 2em

extends layout

block scripts
	script
		$(document).ready(function(){
			$('a.taglink').click(function(event){
				event.preventDefault();
				$('#searchinput').val($(this).attr('for'));
				$('form').submit();
				});
			$('#newpost').click(function(e){
				e.preventDefault();
				var url = "newpost";
				$(location).attr('href',url);
			});
			$('#searchinput').focus();
		})

block content
	include navbar
	.container
		h2.title
			span.plump
				| [#{sitename}]
		.centerbox
			form(method='get',action='/search')
				div
					input(type='text',name='query',id='searchinput')
					button 搜索
					button#newpost 发布信息
		.centerbox
			.linebox
				span
					a.taglink(href='javascript:;', for='汽车 车') 汽车
				span
					a.taglink(href='javascript:;', for='租房 房子 房') 租房
			.linebox
				span
					a.taglink(href='javascript:;', for='交易 买卖 甩卖') 甩卖
				span
					a.taglink(href='javascript:;', for='交友 社交 活动') 交友
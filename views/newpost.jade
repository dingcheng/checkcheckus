extends layout

block scripts
	script(src='http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js')
	script(src='/javascripts/bootstrap-tagmanager2.js')
	script(src='/javascripts/posting.js')

block stylesheet
	link(rel='stylesheet', href='/stylesheets/postview.css')
	//link(rel='stylesheet', href='/stylesheets/bootstrap-tagmanager.css')

block content
	include sidebar
	#container
		form.newpost(method='post',id='postform',enctype='multipart/form-data')
			fieldset
				legend 基本信息
				.floatLeft
					div
						label 标题
							em.star *
						input(type='text',name='title')
					div
						label 标签(Tags)
							em.star *
						input.short(type='text',name='tags',id='tags')
					div
						label 价格
						input(type='text',name='price')
					div
						label Email
							em.star *
						input(type='text',name='email')
					div
						label 手机
						input(type='text',name='cellnum')
					div
						label Zip Code
							em.star *
						input(type='text',name='zipcode')
					div
						label 地址
						input(type='text',name='address')
				.tagBox
